<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_search_pager_group"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_8"
    android:layout_marginEnd="@dimen/dp_12"
    android:layout_marginStart="@dimen/dp_12"
    android:layout_marginTop="@dimen/dp_8"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/dp_3"
    app:cardElevation="@dimen/dp_2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_12"
        android:orientation="vertical"
        android:transitionName="@string/share_view">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_home_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/dp_5"
                android:drawableLeft="@mipmap/ic_code"
                android:gravity="center"
                tools:text="Carson_Ho"
                android:textColor="@color/color_text_gray"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/item_home_chapterName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="四大组件/handler"
                android:textColor="@color/color_text_gray"
                android:gravity="end"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/item_home_author" />
        </RelativeLayout>

        <TextView
            android:id="@+id/item_home_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Android Handler: 手把手带你深入分析Handler机制源码"
            android:textColor="@color/color_text_gray"
            android:textSize="@dimen/sp_16"
            android:gravity="center_vertical"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_10" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/dp_10">



            <ImageView
                android:id="@+id/item_home_like_iv"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:contentDescription="@null"
                android:src="@drawable/icon_like_article_not_selected" />

            <TextView
                android:id="@+id/item_home_niceDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_time"
                android:drawablePadding="@dimen/dp_5"
                android:layout_marginLeft="@dimen/dp_12"
                tools:text="14小时之前"
                android:textColor="@color/color_text_gray"
                android:gravity="center_vertical"
                android:layout_toEndOf="@id/item_home_like_iv"
                android:layout_toRightOf="@id/item_home_like_iv"/>
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
