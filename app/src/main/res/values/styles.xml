<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

    <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/color_gray</item>
         <item name="coordinatorLayoutStyle">@style/Widget.Design.CoordinatorLayout</item>

        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
</style>


    <!--小汉堡颜色为白色-->
    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <!-- 底部 Tab -->
    <style name="MainTabBottom">
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">12sp</item>
        <item name="android:button">@null</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/main_tab_text_selector</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"></style>

</resources>
